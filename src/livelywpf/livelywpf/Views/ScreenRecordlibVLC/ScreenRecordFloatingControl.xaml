<Window x:Class="livelywpf.Views.ScreenRecordlibVLC.ScreenRecordFloatingControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:livelywpf.Views.ScreenRecordlibVLC"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="ScreenRecordFloatingControl" 
        Height="100" Width="250" MaxHeight="100" MaxWidth="250">
    <Grid Background="Black">
        <StackPanel Margin="0, 15, 0, 0">
            <Button x:Name="recordBtn" MinWidth="100" HorizontalAlignment="Center" Background="Green" Click="Button_Click">Start</Button>
            <TextBlock x:Name="timerText" Foreground="Gray" HorizontalAlignment="Center" FontSize="20" Margin="0, 5, 0, 0">Press 'Start' to begin.</TextBlock>
        </StackPanel>
    </Grid>
</Window>
