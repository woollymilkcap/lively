        xmlns:xamlHost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
        
        WindowStartupLocation="Manual"
        Left='-9999'
        ShowInTaskbar="False"
        WindowState="Normal"
        ResizeMode="NoResize"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="GIFViewUWP" Height="450" Width="800"
